{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@helpers/*": ["helpers/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@views/*": ["views/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
